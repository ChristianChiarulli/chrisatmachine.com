---
import SocialList from "../components/SocialList.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPosts from "../components/BlogPosts.astro";
import { YouTube } from "@astro-community/astro-embed-youtube";

const message =
  "Creator and lead maintainer of ðŸŒ™ LunarVim and âš¡ Zap. Teaching and streaming software developement.";
---

<BaseLayout
  pageTitle={"Christian Chiarulli"}
  showImage={true}
  message={message}
>
  <div class=`intro reverse`>
    <img class="intro-image" src="/assets/headshot.jpg" alt="me" />
    <div>
      <h1>Christian Chiarulli</h1>
      <p>
        {message}
      </p>
    </div>
  </div>
  <SocialList />
  <h2>Latest Posts</h2>
  <BlogPosts count={4} />

  <div class="readmore">
    <a href="/blog/1">All Posts â†’</a>
  </div>

  <h2>Latest Video</h2>
  <!-- https://github.com/LuanRT/YouTube.js -->

  <div class="video yt-video">
    <YouTube
      id="https://www.youtube.com/watch?v=sFA9kX-Ud_c&list=PLhoH5vyxr6QqGu0i7tt_XoVK9v-KvZ3m6"
    />
  </div>
</BaseLayout>

<style>
  .readmore {
    padding: 1rem 0;
  }

  .readmore a {
    color: #71717a;
    font-size: 1.1rem;
    text-decoration: none;
  }

  .readmore a:hover {
    text-decoration: underline;
  }
  .video lite-youtube {
    /* center */
    margin-inline: auto; /* full width */
    width: 100%;
    max-width: 100%;
    aspect-ratio: 16/9;
    height: auto;
    padding-top: 1rem;
  }

  .intro {
    display: flex;
    flex-direction: column;
  }

  .intro p {
    padding-top: 0.625rem;
    color: #71717a;
    padding-bottom: 1rem;
    font-size: 1.1rem;
  }

  .hidden-image {
    display: none;
  }

  .intro-image {
    align-self: flex-start;
    margin-top: 2rem;
    border-radius: 50%;
    width: 5rem;
    border-radius: 9999px;
  }

  /* Small Devices, Tablets */
  @media only screen and (min-width: 768px) {
    .intro {
      padding-top: 2rem;
      padding-bottom: 2rem;
      display: flex;
      flex-direction: row;
      align-items: center;
    }

    .intro-image {
      width: 7rem;
    }

    .reverse {
      flex-direction: row-reverse;
    }
  }

  @media only screen and (min-width: 992px) {
    .intro-image {
      width: 10rem;
      margin-left: 4rem;
    }
  }
</style>
